
	<div class="jumbotron">
		<center><h1>Login</h1></center>
	</div>
 <%= form_for(:session, url: login_path, :html => {:class => "form-horizontal center"}) do |f| %>

      <div class="form-group">
        <%= f.label :email, "Your email:", class: "col-md-4 control-label" %>
        <div class="col-md-4">
          <%= f.email_field :email, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :password , "Password:", class: "col-md-4 control-label" %>
        <div class="col-md-4">
          <%= f.password_field :password , class: "form-control" %>
        </div>
      </div>
   
      <div class="text-center">
      	<%= f.submit "Login", class: "btn btn-primary btn-lg " %>
      </div>  
 <% end %>
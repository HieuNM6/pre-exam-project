
<% if @user.errors.any? %>
<div class="alert alert-danger" role="alert">
You have <%= pluralize(@user.errors.count, "error") %>:
<ul>
	<% @user.errors.full_messages.each do |msg| %>
		<li><%= msg %></li>
	<% end %>
</ul>
</div>
<% end %>
<div class="jumbotron">
  <center><h1>Register</h1></center>
</div>

 <%= form_for @user, :html => {:class => "form-horizontal center"} do |f| %>
      <div class="form-group">
        <%= f.label :name , "Your name:", class: "col-md-4 control-label" %>
        <div class="col-md-4">
          <%= f.text_field :name , class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :email, "Email:", class: "col-md-4 control-label" %>
        <div class="col-md-4">
          <%= f.email_field :email, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :password , "Password:", class: "col-md-4 control-label" %>
        <div class="col-md-4">
          <%= f.password_field :password , class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation , "Confirm:", class: "col-md-4 control-label" %>
        <div class="col-md-4">
          <%= f.password_field :password_confirmation , class: "form-control" %>
        </div>
      </div>     
      <div class="text-center">
      	<%= f.submit "Register your account !", class: "btn btn-primary btn-lg " %>
      </div>  
 <% end %>
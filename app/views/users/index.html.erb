<% @users.each do |user| %>
  <li>
    <%= gravatar_for user %>
    <%= link_to user.name, user %>
    <% if current_user.id == 1 %>
      <%= link_to "Edit", edit_user_path(user) %>
      <%= link_to "Delete", user, method: :delete, data: {
                                                  confirm: "Are you sure?"} %>
    <% end %>
  </li>
<% end %>

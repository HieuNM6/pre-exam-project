<% if @post.errors.any? %>
<div class="alert alert-danger" role="alert">
You have <%= pluralize(@post.errors.count, "error") %>:
<ul>
  <% @post.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
</ul>
</div>
<% end %>
<%= form_for @post, :html => {:class => "form-horizontal center"} do |f| %>

  <div class="form-group">
    <%= f.label :title, "Title:", class: "col-md-2 control-label" %>
    <div class="col-md-8">
      <%= f.text_field :title, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :body , "Content:", class: "col-md-2 control-label" %>
    <div class="col-md-8">
      <%= f.text_area :body , class: "form-control", size: "30x30" %>
    </div>
  </div>

  <div class="text-center">
  	<%= f.submit "Update post", class: "btn btn-primary btn-lg " %>
  </div>  
<% end %>